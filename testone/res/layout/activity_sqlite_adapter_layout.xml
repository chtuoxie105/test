<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical" >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/activity_sqlite_cursoradapter__name_text"
            style="@style/main_cursor_listview"
            android:text="姓名" />

        <TextView
            android:id="@+id/activity_sqlite_cursoradapter__number_text"
            style="@style/main_cursor_listview"
            android:text="学号" />

        <TextView
            android:id="@+id/activity_sqlite_cursoradapter__sex_text"
            style="@style/main_cursor_listview"
            android:text="性别" />

        <TextView
            android:id="@+id/activity_sqlite_cursoradapter__score_text"
            style="@style/main_cursor_listview"
            android:text="成绩" />

        <TextView
            android:id="@+id/activity_sqlite_cursoradapter__address_text"
            style="@style/main_cursor_listview"
            android:text="地址" />
    </LinearLayout>

</LinearLayout>