<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:padding="4dp"
    android:background="@color/lanse">

    <ImageView
       android:id="@+id/json_arraylist_image"
        android:layout_width="80dp"
        android:layout_height="80dp" 
        android:src="@drawable/m3"/>

    <TextView
        android:id="@+id/json_arraylist_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:layout_toRightOf="@id/json_arraylist_image"
        android:gravity="center"
        android:layout_marginTop="12dp"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:text="标题"/>

    <TextView
        android:id="@+id/json_arraylist_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_alignLeft="@id/json_arraylist_title"
        android:layout_below="@id/json_arraylist_title"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:text="国家发改委副主任朱之鑫"/>

    <TextView
        android:id="@+id/json_arraylist_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        
        android:text="1条评论"/>

</RelativeLayout>