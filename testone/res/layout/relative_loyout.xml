<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/user_linear_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="180dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户名:"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/name_edit"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:hint="请输入用户名"
            android:background="@android:color/darker_gray"
            android:inputType="textFilter"
            android:singleLine="true"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/password_linear_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/user_linear_layout"
        android:layout_below="@id/user_linear_layout"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密    码:"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/password_edit"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:hint="请输入密码"
            android:background="@android:color/darker_gray"
            android:inputType="textPassword"
            android:singleLine="true"
            
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/password_linear_layout"
        android:layout_marginTop="30dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/loging_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="登录" />

        <Button
            android:id="@+id/exit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="退出" />
    </LinearLayout>

     <TextView
         	 android:id="@+id/hint_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:text="gfddf"
            android:textSize="24sp" />
    
</RelativeLayout>