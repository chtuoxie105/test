<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lisview_json_background" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:layout_margin="10dp"
        android:padding="3dp" >

        <ImageView
            android:id="@+id/listview_json__shopimg"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_margin="2dp"
            android:src="@drawable/m3" />

        <ImageView
            android:id="@+id/listview_json__groupshopping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp" />

        <ImageView
            android:id="@+id/listview_json__coupon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/listview_json__groupshopping"
            android:layout_marginRight="2dp"
            android:layout_toLeftOf="@id/listview_json__groupshopping" />

        <ImageView
            android:id="@+id/listview_json__shoppingcard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/listview_json__groupshopping"
            android:layout_marginRight="2dp"
            android:layout_toLeftOf="@id/listview_json__coupon" />

        <TextView
            android:id="@+id/listview_json_shopmap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="2dp"
            android:text=":203m" />

        <ImageView
            android:id="@+id/listview_json__shoppingmap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignTop="@id/listview_json_shopmap"
            android:layout_marginRight="2dp"
            android:layout_toLeftOf="@id/listview_json_shopmap"
            android:paddingBottom="3dp"
            android:src="@drawable/info_map" />

        <TextView
            android:id="@+id/listview_json_shopname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@id/listview_json__groupshopping"
            android:layout_toRightOf="@id/listview_json__shopimg"
				
            android:singleLine="true"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/listview_json_shopmessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/listview_json_shopname"
            android:layout_alignRight="@id/listview_json_shopname"
            android:layout_below="@id/listview_json_shopname"
            android:layout_marginRight="40dp"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            android:textColor="@android:color/holo_red_light"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/listview_json_shopaddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/listview_json_shopname"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:layout_toLeftOf="@id/listview_json__shoppingmap"
            android:layout_toRightOf="@id/listview_json__shoppingcard"
            android:singleLine="true"
            android:textColor="@android:color/holo_green_light"
            android:textSize="14sp" />
    </RelativeLayout>

</RelativeLayout>